@{
    ViewData["Title"] = "Login";
}
@model LoginViewModel

<h1>Login</h1>
<form asp-action="Login" method="post">
    @if (!string.IsNullOrEmpty(Model?.Message))
    {
        <p>@Model.Message</p>
    }
    <div asp-validation-summary="All"></div>
    <div class="form-group row">
        <label asp-for="UserName" class="col-sm-1 col-form-label">Username</label>
        <div class="col-sm-11" style="max-width: 400px">
            <input type="text" class="form-control" asp-for="UserName" placeholder="Enter username" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Password" class="col-sm-1 col-form-label">Password</label>
        <div class="col-sm-11" style="max-width: 400px">
            <input type="password" class="form-control" asp-for="Password" placeholder="Enter password" />
        </div>
    </div>
    <p><a asp-action="ResetPassword">Forget password?</a></p>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>