@{
    ViewData["Title"] = "Account";
}
@model AccountViewModel
<h1>My Account</h1>

<form asp-action="Index" method="post">
    @if (!string.IsNullOrEmpty(Model?.Message))
    {
        <p>@Model.Message</p>
    }
    <div asp-validation-summary="All"></div>
    <div class="form-group row">
        <label asp-for="FirstName" class="col-sm-1 col-form-label">First Name</label>
        <div class="col-sm-11" style="max-width: 400px">
            <input type="text" class="form-control" asp-for="FirstName" placeholder="Enter first name" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="MiddleName" class="col-sm-1 col-form-label">Middle Name</label>
        <div class="col-sm-11" style="max-width: 400px">
            <input type="text" class="form-control" asp-for="MiddleName" placeholder="Enter middle name" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="LastName" class="col-sm-1 col-form-label">Last Name</label>
        <div class="col-sm-11" style="max-width: 400px">
            <input type="text" class="form-control" asp-for="LastName" placeholder="Enter last name" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="DisplayName" class="col-sm-1 col-form-label">Display Name</label>
        <div class="col-sm-11" style="max-width: 400px">
            <input type="text" class="form-control" asp-for="DisplayName" placeholder="Enter display name" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-1 col-form-label">Email</label>
        <div class="col-sm-11" style="max-width: 400px">
            <input type="text" class="form-control" asp-for="Email" placeholder="Enter email address" />
        </div>
    </div>
    <p><a asp-action="ResetPassword">Change password</a></p>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>